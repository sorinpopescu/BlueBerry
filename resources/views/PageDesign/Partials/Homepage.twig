                                    <span class="hidden-xs-down">{{ trans("Ceres::Template.loginRegister") }}</span>
                                </a>
                            </li>
                            <li class="other-desc-li">
                                <a data-toggle="modal" href="#resetPwd">
                                    <span>{{ trans("Ceres::Template.loginForgotPassword") }}</span>
